package workplace.service.first.colour;


public class PrimitiveDataTypeDeclaration {
	
	
	
 //fields - instance variables
		int firstValue1,firstValue2,firstValue3;
		double simpleInterest1,simpleInterest2;
		boolean switchOn,switchOff;
		char c1;
		String firstName,lastName,fullName;
		
		/*
		 * Methods in java
		 */
		
		public void sumName() {
			
			firstValue3 = firstValue1 + firstValue2;
			System.out.println("the sum of two numbers :  " + firstValue3);
		}
		
		public void multiplyValue() {
			
			fullName = firstName + lastName;
			System.out.println("the sum of two names : " + fullName);
		}

		public static void main(String[] args) {
			
			PrimitiveDataTypeDeclaration pdtd1 = new PrimitiveDataTypeDeclaration();
			
			pdtd1.firstValue1 = 10;
			pdtd1.firstValue2 = 20;
			pdtd1.sumName();
			
			// Method multiplyValue
			
			pdtd1.firstName = "Vishnu";
			pdtd1.lastName = "Priyanka 90-]?";
			pdtd1.multiplyValue();
		}

}
